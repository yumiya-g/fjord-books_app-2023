<div class="index-item">
  <div id="<%= dom_id report %>">
    <h2>
      <strong><%= t('common.title') %>:</strong>
      <%= report.title %>
    </h2>

    <p><%= Comment.human_attribute_name('posted_by') %>:<%= report.user.name.presence || report.user.email %><br>
    <small><%= Comment.human_attribute_name('posted_on') %>:<%= l report.created_at %></small></p>

    <p>
      <strong><%= Comment.human_attribute_name('body') %>:</strong>
      <%= report.body %>
    </p>
  </div>
  <p>
      <%= link_to t('views.common.show', name: Report.model_name.human), report %>
    </p>
</div>
