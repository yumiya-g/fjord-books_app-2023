<%= render '/layouts/header' %>
<h2><%= t('views.user.edit_user') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('views.user.about_password')%>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t('views.user.char_min')%></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('views.user.current_password')%>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :prefecture %><br />
    <%= f.text_field :prefecture, autocomplete: "prefecture" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autocomplete: "city" %>
  </div>

  <div class="field">
    <%= f.label :house_number %><br />
    <%= f.text_field :house_number, autocomplete: "house_number" %>
  </div>

  <div class="field">
    <%= f.label :building %><br />
    <%= f.text_field :building, autocomplete: "building" %>
  </div>

  <div class="field">
    <%= f.label :self_introduction %><br />
    <%= f.text_area :self_introduction, autocomplete: "self_introduction" %>
  </div>

  <div class="actions">
    <%= f.submit t('views.user.to_be_update') %>
  </div>
<% end %>

<h3><%= t('views.user.delete_account')%></h3>

<div><%= t('views.user.unhappy')%> <%= button_to t('views.user.delete_account'), registration_path(resource_name), data: { confirm: t('views.common.confirm'), turbo_confirm: t('views.common.confirm') }, method: :delete %></div>

<%= link_to t('views.common.back'), :back %>
